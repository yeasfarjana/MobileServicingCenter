<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ocean"
    tools:context=".MobileBrandActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#887878"
                android:gravity="center"
                android:padding="5dp"
                android:text="Mobile Brands"
                android:textColor="@android:color/background_light"
                android:textSize="30sp"
                android:textStyle="bold"
                app:fontFamily="serif" />

            <LinearLayout
                android:id="@+id/layout8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout1"
                android:background="@android:drawable/zoom_plate"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_nokia"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:drawable/menuitem_background"
                    android:text="NOKIA"
                    android:textColor="@android:color/background_light"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout1"
                android:background="@android:drawable/zoom_plate"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_samsung"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:drawable/menuitem_background"
                    android:text="Samsung"
                    android:textColor="@android:color/background_light"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout1"
                android:background="@android:drawable/zoom_plate"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_huawei"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:drawable/menuitem_background"
                    android:text="Huawei"
                    android:textColor="@android:color/background_light"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout1"
                android:background="@android:drawable/zoom_plate"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_xiaomi"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:drawable/menuitem_background"
                    android:text="Xiaomi"
                    android:textColor="@android:color/background_light"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout1"
                android:background="@android:drawable/zoom_plate"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_symphony"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:drawable/menuitem_background"
                    android:text="Symphony"
                    android:textColor="@android:color/background_light"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout1"
                android:background="@android:drawable/zoom_plate"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_oppo"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:drawable/menuitem_background"
                    android:text="Oppo"
                    android:textColor="@android:color/background_light"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout1"
                android:background="@android:drawable/zoom_plate"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_iphone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:drawable/menuitem_background"
                    android:text="Iphone"
                    android:textColor="@android:color/background_light"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:drawable/zoom_plate"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_walton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:drawable/menuitem_background"
                android:text="Walton"
                android:textColor="@android:color/background_light"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
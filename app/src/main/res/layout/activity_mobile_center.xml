<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ocean"
    tools:context=".MobileCenterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#887878"
                android:gravity="center"
                android:padding="5dp"
                android:text="Mobile Center"
                android:textColor="@android:color/background_light"
                android:textSize="30sp"
                android:textStyle="bold"
                app:fontFamily="serif" />

            <LinearLayout
                android:id="@+id/layout8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout1"
                android:background="@android:drawable/zoom_plate"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_bashundhara"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:drawable/menuitem_background"
                    android:text="Bashundhara city shopping complex"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout1"
                android:background="@android:drawable/zoom_plate"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_dhanmondi"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:drawable/menuitem_background"
                    android:text="Dhanmondi Prince Plaza "
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout1"
                android:background="@android:drawable/zoom_plate"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_uttara"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:drawable/menuitem_background"
                    android:text="Uttara
North tower  Shopping Complex "
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout1"
                android:background="@android:drawable/zoom_plate"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_mirpur"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:drawable/menuitem_background"
                    android:text="Mirpur Dynasty Tower"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout1"
                android:background="@android:drawable/zoom_plate"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_paltan"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:drawable/menuitem_background"
                    android:text="Paltan Tropicana Tower"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout1"
                android:background="@android:drawable/zoom_plate"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_gulshan"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:drawable/menuitem_background"
                    android:text="Gulshan Molly capita Center"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/layout1"
                android:background="@android:drawable/zoom_plate"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_savar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:drawable/menuitem_background"
                    android:text="Savar Mahtab Plaza"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:drawable/zoom_plate"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_mymensingh"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:drawable/menuitem_background"
                    android:text="Nokia Care Mymensingh"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>